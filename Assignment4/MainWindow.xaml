<Window x:Class="Assignment4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment4"
        mc:Ignorable="d"
        Title="Apu Cookbook by Manish" Height="380" Width="928" ResizeMode="CanMinimize">
    <Grid Margin="0,0,0,17" HorizontalAlignment="Center" Width="928">
        
        <!-- GroupBox for Add New Recipe -->
        <GroupBox HorizontalAlignment="Left" Height="322" Header="Add New Recipe" Margin="21,0,0,0" VerticalAlignment="Center" Width="380">
        </GroupBox>

        <!-- Recipe Name Label and TextBox -->
        <Label Content="Recipe name" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Margin="29,30,0,0" />
        <TextBox x:Name="recipeName" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="25" Margin="145,34,0,0" Width="243" TextWrapping="Wrap" />

        <!-- Category Label and ComboBox -->
        <Label Content="Category" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Margin="29,70,0,0" Width="95"/>
        <ComboBox x:Name="categoryComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Margin="145,74,0,0" Width="243"/>

        <!-- Add Ingredients Button -->
        <Button x:Name="addIngerBtn" Content="Add Ingredients and Instructions" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Margin="29,118,0,0" Width="359" Click="addIngerBtn_Click"/>

        <!-- Add Recipe Button -->
        <Button x:Name="AddRecipeBtn" Content="Add Recipe" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Margin="29,282,0,0" Width="359" Click="btnAddRec_Click"/>

        <!-- Header for Recipe List -->
        <Label Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Height="29" Margin="412,12,0,0" Width="82"/>
        <Label Content="Category" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Margin="647,13,0,0" Width="82"/>
        <Label Content="No. of ingredients" HorizontalAlignment="Left" VerticalAlignment="Top" Height="29" Margin="797,13,0,0" Width="112"/>

        <!-- Recipe ListBox -->
        <ListBox x:Name="listRecipes" HorizontalAlignment="Left" VerticalAlignment="Top" Height="216" Margin="412,46,0,0" Width="497" d:ItemsSource="{d:SampleData ItemCount=5}"/>

        <!-- Action Buttons (Change, Delete, Clear Input) -->
        <Button Content="Change" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Margin="412,269,0,0" Width="102" Click="btnEditBegin_Click"/>
        <Button Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Margin="612,269,0,0" Width="102" Click="btnDel_Click"/>
        <Button Content="Clear Input" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Margin="805,269,0,0" Width="102" Click="btnClear_Click"/>

    </Grid>
</Window>
