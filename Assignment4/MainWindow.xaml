<Window x:Class="Assignment4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression.blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment4"
        mc:Ignorable="d"
        Title="Apu Cookbook by Manish" Height="700" Width="928" ResizeMode="CanMinimize"
        Icon="/assets/icon.png">
    <Grid Margin="0,0,0,17" HorizontalAlignment="Center" Width="928">
        
        <!-- GroupBox for Add New Recipe -->
        <GroupBox HorizontalAlignment="Left" Height="322" Header="Add New Recipe" Margin="21,0,0,0" VerticalAlignment="Top" Width="380">
            <Grid>
                <Label Content="Recipe name" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Margin="8,10,0,0"/>
                <TextBox x:Name="recipeName" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Margin="120,14,0,0" Width="243" TextWrapping="Wrap"/>

                <Label Content="Category" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Margin="8,50,0,0" Width="95"/>
                <ComboBox x:Name="categoryComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Margin="120,54,0,0" Width="243" SelectionChanged="categoryComboBox_SelectionChanged"/>

                <!-- Category image positioned to be behind the button -->
                <Image x:Name="categoryImage" HorizontalAlignment="Center" VerticalAlignment="Top" Height="180" Width="180" Margin="0,110,0,0" Visibility="Hidden" Stretch="Uniform"/>
                
                <!-- Button now appears after the image in XAML (will render on top) -->
                <Button x:Name="addIngerBtn" Content="Add Ingredients and Instructions" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Margin="8,95,0,0" Width="359" Click="addIngerBtn_Click"/>
                
                <Button x:Name="AddRecipeBtn" Content="Add Recipe" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="30" Margin="8,0,0,10" Width="359" Click="btnAddRec_Click"/>
            </Grid>
        </GroupBox>

        <!-- Recipe ListBox and Associated Controls Below the GroupBox -->
        <Grid Margin="21,340,0,0">
            <Label Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="82"/>
            <Label Content="Category" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Margin="150,0,0,0" Width="82"/>
            <Label Content="No. of ingredients" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Margin="278,0,0,0" Width="112"/>
            
            <ListBox x:Name="listRecipes" FontFamily="Courier New" HorizontalAlignment="Left" VerticalAlignment="Top" Height="216" Margin="0,35,0,0" Width="380" d:ItemsSource="{d:SampleData ItemCount=5}"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,260,0,0" HorizontalAlignment="Left">
                <Button Content="Change" Width="102" Click="btnEditBegin_Click"/>
                <Button Content="Delete" Width="102" Margin="38,0,0,0" Click="btnDel_Click"/>
                <Button Content="Clear Input" Width="102" Margin="35,0,0,0" Click="btnClear_Click"/>
            </StackPanel>
        </Grid>

        <!-- Cooking Details GroupBox -->
        <GroupBox Header="Cooking Details" HorizontalAlignment="Right" Margin="420,0,21,0" Width="480" Height="600" VerticalAlignment="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBox x:Name="cookingDetailsText" 
                         TextWrapping="Wrap" 
                         IsReadOnly="True" 
                         VerticalScrollBarVisibility="Auto"
                         Margin="10,10,10,10"
                         FontFamily="Consolas"
                         Grid.Row="0"/>
                
                <!-- Separator between text and image -->
                <Separator Grid.Row="1" Margin="10,0,10,5" />
                
                <!-- Category image display -->
                <Border Grid.Row="1" 
                        Background="#F5F5F5" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="1" 
                        CornerRadius="5"
                        Margin="10,10,10,10" 
                        Padding="10"
                        Width="Auto"
                        Height="200"
                        HorizontalAlignment="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Title for the category image -->
                        <TextBlock Text="Category:" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,5"
                                   Grid.Row="0"/>
                        
                        <!-- Category image with effect -->
                        <Border Grid.Row="1" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                CornerRadius="3"
                                Background="White"
                                Padding="5">
                            <Image x:Name="recipeCategoryImage" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   Width="150" 
                                   Height="150" 
                                   Visibility="Hidden" 
                                   Stretch="Uniform">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.3"/>
                                </Image.Effect>
                            </Image>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </GroupBox>
    </Grid>
</Window>